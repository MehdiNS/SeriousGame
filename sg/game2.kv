#:kivy 1.8.0

# Initialization of the class object	
<CategoryHouse>:
	category: "house"
	size: 200,200     
	name: "Cat1"
	canvas:
	    Rectangle:
	        pos: self.pos
	        size: self.size
	        source: '../image/Dessins/Habitations/Habitat1.tif'

<CategoryVehicle>:
	size: 200,200
	category: "vehicle"
	name: "Cat2"
	canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../image/Dessins/Habitations/Habitat1.tif'
    		
<CategoryCharacter>:
    size: 200, 200
    category: "character"
    name: "Cat3"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../image/Dessins/Habitations/Habitat1.tif'
    		    		
# Initialization of the class object
<Object>:
	category: "house"
    size: 100, 100
    id: untouched
	on_touch_down: 
		root.on_touch_move
		self.id = touched
	on_touch_up:
		self.id = untouched
	pos_base: [0,0]



