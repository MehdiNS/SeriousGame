#:kivy 1.8
<Game3>:
	canvas:
		Rectangle:
			pos: self.pos
			size: self.size
			source: '../image/BackGrounds/jungle.jpg'	
	Label:
		size: root.width/8,root.height/6
        font_size: root.width*1/8  
        x: root.width*7/8
        y: root.height*5/6
        text:str(root.score)
        
    Label:
		size: root.width/8,root.height/6
        font_size: root.width*1/32
        x: root.width*7/8
        y: root.height*4.25/6
        text: 'Score'
        
	Label:
		size: root.width/8,root.height/6
        font_size: root.width*1/32  
        x: root.width*7/8
        y: root.height*1/40
        text:str(root.clock)
        
	Label:
		size: root.width/8,root.height/6
        font_size: root.width*1/50 
        x: root.width*7/8
        y: root.height*3/40
        text:'Temps'